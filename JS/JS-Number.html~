<script>

var x1 = 10;

var y1 = 20;

document.getElementById("demo1").innerHTML =

"The result is: " + x1 + y1;


var x2 = NaN;
document.getElementById("demo2").innerHTML = typeof x2;

var myNumber = 2; 
var txt = "";
while (myNumber != Infinity) {
   myNumber = myNumber * myNumber;
   txt = txt + myNumber + "<br>";
}
document.getElementById("demo3").innerHTML = txt;

var x = 0xFF;
document.getElementById("demo4").innerHTML = "0xFF = " + x;

</script>

